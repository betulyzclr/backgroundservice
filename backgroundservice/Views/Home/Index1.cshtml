@model backgroundservice.Models.JobViewModel

@{
    ViewData["Title"] = "Yeni Job Ekle";
}

<h2>Yeni Job Ekle</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Job Name</label>
        <input asp-for="jobName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Job Key</label>
        <input asp-for="jobKey" class="form-control" />
    </div>

    <div class="form-group">
        <label>Job Description</label>
        <textarea asp-for="jobDescription" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Endpoint</label>
        <input asp-for="endpoint" class="form-control" />
    </div>

    <div class="form-group">
        <label>Schedule</label>
        <input asp-for="schedule" class="form-control" />
    </div>

    <div class="form-group">
        <label>Is Active</label>
        <input asp-for="isActive" type="checkbox" />
    </div>

    <div class="form-group">
        <label>Retry Count</label>
        <input asp-for="retryCount" class="form-control" type="number" />
    </div>

    <div class="form-group">
        <label>Retry Minutes</label>
        <input asp-for="retryMinutes" class="form-control" type="number" />
    </div>

    <div class="form-group">
        <label>Last Run Date</label>
        <input asp-for="lastRunDate" class="form-control" type="datetime-local" />
    </div>

    <div class="form-group">
        <label>Last Success Date</label>
        <input asp-for="lastSuccessDate" class="form-control" type="datetime-local" />
    </div>

    <div class="form-group">
        <label>Last Error Date</label>
        <input asp-for="lastErrorDate" class="form-control" type="datetime-local" />
    </div>

    <div class="form-group">
        <label>Last Updated Date</label>
        <input asp-for="lastUpdatedDate" class="form-control" type="datetime-local" />
    </div>

    <div class="form-group">
        <label>Last Created Date</label>
        <input asp-for="lastCreatedDate" class="form-control" type="datetime-local" />
    </div>

    <br />
    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</form>

