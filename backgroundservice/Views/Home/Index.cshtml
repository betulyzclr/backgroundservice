@model List<backgroundservice.Models.JobViewModel>

@{
    ViewData["Title"] = "Jobs List";
}

<h1>Jobs List</h1>

<p>
    <a asp-action="Create" asp-controller="Jobs" class="btn btn-primary">Create New Job</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().JobName)</th>
            <th>@Html.DisplayNameFor(model => model.First().JobKey)</th>
            <th>@Html.DisplayNameFor(model => model.First().IsActive)</th>
            <th>@Html.DisplayNameFor(model => model.First().LastRunDate)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any()) // Liste boş değilse
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.JobName)</td>
                    <td>@Html.DisplayFor(modelItem => item.JobKey)</td>
                    <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                    <td>@Html.DisplayFor(modelItem => item.LastRunDate)</td>
                    <td>
                        <a asp-action="Details" asp-controller="Jobs" asp-route-id="@item.ID">Details</a>
                        <a asp-action="Edit" asp-controller="Jobs" asp-route-id="@item.ID">Edit</a>
                        <a asp-action="Delete" asp-controller="Jobs" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">No jobs found.</td>
            </tr>
        }
    </tbody>
</table>

